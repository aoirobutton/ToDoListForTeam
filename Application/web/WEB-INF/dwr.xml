<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr//dwr30.dtd">

<!-- DWRを使うときに，JavaScriptから呼び出したい Java プログラムを指定する． -->
<dwr>
  <allow>
    <create creator="new" javascript="addDwrTest">
      <param name="class" value="todo.addDwrTest"/>
    </create>
    <create creator="new" javascript="addGsonTest">
      <param name="class" value="todo.addGsonTest"/>
    </create>
    <create creator="new" javascript="addMongoTest">
      <param name="class" value="todo.addMongoTest"/>
    </create>
    <create creator="new" javascript="LoginController">
      <param name="class" value="controller.LoginController"/>
    </create>
    <convert converter="bean" match="todo.*" />
    <convert converter="bean" match="view.*" />
    <convert converter="bean" match="model.*" />
    <!--
    <convert converter="bean" match="model.*" />
    <convert converter="exception" match="java.lang.Exception" />
    <convert converter="bean" match="java.lang.StackTraceElement"/>
    -->
  </allow>
</dwr>
