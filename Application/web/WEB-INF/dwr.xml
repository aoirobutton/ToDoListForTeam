<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE dwr PUBLIC
    "-//GetAhead Limited//DTD Direct Web Remoting 3.0//EN"
    "http://getahead.org/dwr//dwr30.dtd">

<!-- DWRを使うときに，JavaScriptから呼び出したい Java プログラムを指定する． -->
<dwr>
  <allow>
    <create creator="new" javascript="addDwrTest">
      <param name="class" value="todo.addDwrTest"/>
    </create>
    <create creator="new" javascript="addGsonTest">
      <param name="class" value="todo.addGsonTest"/>
    </create>
    <create creator="new" javascript="addMongoTest">
      <param name="class" value="todo.addMongoTest"/>
    </create>
    <create creator="new" javascript="addaccount">
      <param name="class" value="controller.addaccount"/>
    </create>
    
    <convert converter="bean" match="todo.*" />
    <convert converter="bean" match="view.*"/>
    <create creator="new" javascript="LoginController">
      <param name="class" value="controller.LoginController"/>
    </create>
    <create creator="new" javascript="DisplayTicketListController">
      <param name="class" value="controller.DisplayTicketListController"/>
    </create>
    <create creator="new" javascript="RegisterProjectController">
      <param name="class" value="controller.RegisterProjectController"/>
    </create>
    <create creator="new" javascript="DeleteTicketController">
      <param name="class" value="controller.DeleteTicketController"/>
    </create>
    <create creator="new" javascript="DisplayProjectController">
      <param name="class" value="controller.DisplayProjectController"/>
    </create>
    <create creator="new" javascript="EditProjectController">
      <param name="class" value="controller.EditProjectController"/>
    </create>
    <create creator="new" javascript="LogoutController">
      <param name="class" value="controller.LogoutController"/>
    </create>
    <create creator="new" javascript="AddTicketController">
      <param name="class" value="controller.AddTicketController"/>
    </create>
    <convert converter="bean" match="view.*" />
    <convert converter="bean" match="todo.*" />
    <convert converter="bean" match="model.*" />
    <convert converter="exception" match="java.lang.Exception" />
    <!--
    <convert converter="bean" match="java.lang.StackTraceElement"/>
    -->
  </allow>
</dwr>
